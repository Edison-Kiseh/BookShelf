<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookShelf.AddBookPage"
             Title="AddBookPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Cover Image Selection -->
            <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
                <Image x:Name="BookImage" 
                  BackgroundColor="Gray"
                  WidthRequest="300"
                  HeightRequest="300"
                  HorizontalOptions="Center" />

                <Button
                    Text="Pick an image"
                    Clicked="OnSelectImage"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>

            <!-- Title -->
            <Entry x:Name="TitleEntry"
                   Placeholder="Enter Book Title"
                   ReturnType="Next" />

            <!-- Author -->
            <Entry x:Name="AuthorEntry"
                   Placeholder="Enter Author Name"
                   ReturnType="Next" />

            <!-- Genre Picker -->
            <Picker Title="Select a book genre"
                ItemsSource="{Binding Books}"
                ItemDisplayBinding="{Binding Genre}"/>

            <!-- ISBN -->
            <Entry x:Name="ISBNEntry"
                   Placeholder="Enter ISBN"
                   Keyboard="Numeric"
                   ReturnType="Next" />

            <!-- Publication Date -->
            <DatePicker x:Name="PublicationDatePicker"
                        Date="{Binding DateTime.Now}"
                        Format="D" />

            <!-- Description -->
            <Editor x:Name="DescriptionEditor"
                    Placeholder="Enter Description"
                    HeightRequest="100" />

            <!-- Add Button -->
            <Button Text="Add Book"
                    Clicked="OnAddButtonClicked"
                    BackgroundColor="Red"
                    TextColor="White" />

        </StackLayout>
    </ScrollView>
</ContentPage>