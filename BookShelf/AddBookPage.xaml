<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookShelf.AddBookPage"
             Title="AddBookPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Cover Image Selection -->
            <Button x:Name="SelectCoverImageButton"
                    Text="Select Cover Image"
                    Clicked="OnSelectCoverImageClicked"
                    BackgroundColor="LightGray"
                    TextColor="Black" />

            <!-- Display the selected image -->
            <Image x:Name="CoverImage"
                   HeightRequest="200"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <!-- Title -->
            <Entry x:Name="TitleEntry"
                   Placeholder="Enter Book Title"
                   ReturnType="Next" />

            <!-- Author -->
            <Entry x:Name="AuthorEntry"
                   Placeholder="Enter Author Name"
                   ReturnType="Next" />

            <!-- Genre Picker -->
            <Picker x:Name="GenrePicker"
                    Title="Select Genre"
                    SelectedIndexChanged="OnGenreSelected">
                <Picker.Items>
                    <x:String>Adventure</x:String>
                    <x:String>Fantasy</x:String>
                    <x:String>Sci-Fi</x:String>
                    <x:String>Romance</x:String>
                    <x:String>Non-Fiction</x:String>
                </Picker.Items>
            </Picker>

            <!-- ISBN -->
            <Entry x:Name="ISBNEntry"
                   Placeholder="Enter ISBN"
                   Keyboard="Numeric"
                   ReturnType="Next" />

            <!-- Publication Date -->
            <DatePicker x:Name="PublicationDatePicker"
                        Date="{Binding DateTime.Now}"
                        Format="D" />

            <!-- Description -->
            <Editor x:Name="DescriptionEditor"
                    Placeholder="Enter Description"
                    HeightRequest="100" />

            <!-- Add Button -->
            <Button Text="Add Book"
                    Clicked="OnAddButtonClicked"
                    BackgroundColor="Red"
                    TextColor="White" />

        </StackLayout>
    </ScrollView>
</ContentPage>