<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookShelf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookShelf"
    Shell.FlyoutBehavior="Flyout"
    Title="BookShelf">

    <TabBar>
        <!-- Home Tab -->
        <Tab Title="Home" Icon="dotnet_bot.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <!-- Library Tab -->
        <Tab Title="Favourites" Icon="dotnet_bot.png">
            <ShellContent
                Title="Favourites"
                ContentTemplate="{DataTemplate local:Favourites}"
                Route="Favourites" />
        </Tab>

        <!-- Add book Tab -->
        <Tab Title="Add book" Icon="dotnet_bot.png">
            <ShellContent
                Title="Add book"
                ContentTemplate="{DataTemplate local:AddBookPage}"
                Route="AddBookPage" />
        </Tab>

    </TabBar>

</Shell>
